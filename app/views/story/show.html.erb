<div class='game'>

<div class='dayticker'>
  <h3>Day: <%= @story.day %></h3>
</div>

  <div class='column'>

    <div class='box'>
      <div class='eventlog'>
        <p><%= @story.text %></p>
      </div>
    </div>

    <div class='box'>
      <div class='events'>
      <p>Event</p>
      </div>
        <p><%= @event.setting %></p>
        <p>Select X characters to X<p>
        <% @living_characters.each do |character| %>
          <%= check_box_tag 'char_ids[]', character.id -%>
          <%= h character.name -%>
        <% end %>
        <% if @event.event_type == 1 %>
          <p>Select a second character</p>
          <% @living_characters.each do |character| %>
            <%= check_box_tag 'char_ids[]', character.id -%>
            <%= h character.name -%>
          <% end %>
        <% end %>
        <%= link_to 'next', story_path(@story.id + 1) %>
    </div>

    <div class='box'>
      <div class='abilities'>
        Abilities
      </div>
    </div>

  </div>

  <div class='characters'>
    <h3>Characters</h3>
    <% @characters.each do |character| %>
    <p><%= character.name %> Status: <%= character.status %> Morale: <%= character.morale %> Attack: <%= character.attack %></p>
    <% end %>
  </div>

</div>