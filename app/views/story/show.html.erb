<div class='game'>

<div class='dayticker'>
  <h3>Day: <%= @story.day %></h3>
</div>

  <div class='column'>

    <div class='box'>
      <div class='eventlog'>
        <p><%= @story.text %></p>
      </div>
    </div>

    <div class='box'>
      <div class='events'>
        <%= link_to 'next', story_path(@story.id + 1) %>
      </div>
    </div>

    <div class='box'>
      <div class='abilities'>
        Abilities
      </div>
    </div>

  </div>

  <div class='characters'>
    <h3>Characters</h3>
    <% @characters.each do |character| %>
    <p><%= character.name %> Status: <%= character.status %> Morale: <%= character.morale %> Attack: <%= character.attack %></p>
    <% end %>
  </div>

</div>